<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body>
  <h1>Hello World 
  </h1>

  <% if (blogs.length> 0) { %>
    <% blogs.forEach(function(blog) { %>
      <div>
        <h3>
          <%= blog.title %>
        </h3>
        <h4>
          <%= blog.subtitle %>
        </h4>
        <h5>
         published: <%= blog.publish_date %>
        </h5>
      </div>
      <% }); %>
        <% } %>

      <a href="/author/home">
        <button> view own blogs </button>
      </a>
</body>

</html>
