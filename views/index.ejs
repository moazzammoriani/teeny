<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/public/styles/all.css">
  <link rel="stylesheet" href="/public/styles/index.css">
</head>

<body>
  <main>

    <%- include("./partials/blog-heading.ejs") %>

      <a href="/author/home">
        dashboard
      </a>
      <hr><br>

      <div class="heading">
        Articles
      </div>

      <% if (blogs.length> 0) { %>
        <% blogs.forEach(function(blog) { %>
          <a href="/reader/article/<%= blog.id %>">
            <div class="blog blog-link" href="/reader/articles/<%= blog.id %>">
              <div class="blog-title">
                <%= blog.title %>
              </div>
              <div class="blog-subtitle">
                <%= blog.subtitle %>
              </div>
              <p class="published">
                Posted by: <%= blog.username%>
              </p>
              <p class="published">
                Published: <%= blog.publish_date %>
              </p>
            </div>
          </a>
          <% }); %>
            <% } %>

              <script src="/public/js/logout.js">
              </script>
  </main </body>


</html>
